function myFunction1(){
    var mainSec = document.getElementById("sec-head")

    var checkBox1 = document.getElementById("checkbox1");

    if (checkBox1.checked == true)
    {
        counter++;
        if(counter==6)
        {
            hash=hash+1;
            mainSec.textContent="#" + hash;
        }
    }
    else{
        mainSec.textContent=".main-sec-head"
        if(counter==6)
        {
            hash=hash-1;
        }
        counter--;
    }    
}


